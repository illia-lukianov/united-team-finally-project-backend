        "type": "object",
        "required": [
          "_id",
          "name",
          "email"
        ],
        "properties": {
          "_id": {
            "type": "string",
            "description": "User's id",
            "example": "6462a6cd4c3d0ddd28897f8d"
          },
          "name": {
            "description": "User's name",
            "type": "string",
            "example": "John Dou"
          },
          "email": {
            "description": "User's email",
            "type": "string",
            "example": "example@mail.com"
          },
          "avatar": {
            "description": "User's avatar",
            "type": "string",
            "example": "https://link.to/photo.jpg"
          },
